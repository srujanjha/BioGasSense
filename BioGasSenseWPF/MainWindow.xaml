<Window x:Class="BioGasSenseWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BioGasSenseWPF"
        mc:Ignorable="d"
        Title="BioGasSense" Height="350" Width="525" Background="Black" ContentRendered="Window_ContentRendered" ResizeMode="NoResize">
    <Grid>
        <Image Source="background.png" Opacity="0.8" Stretch="UniformToFill"/>
        <TextBlock Text="BioGas-Sense" FontSize="50" Margin="10" Foreground="White" Height="70" Opacity="0.9" Background="Black" VerticalAlignment="Top" TextAlignment="Center"/>
        <StackPanel x:Name="Stack" Orientation="Vertical" Margin="20,100,20,10" Background="Black" Opacity="0.6">
            <TextBlock Text="Sensor #1: " FontSize="25" Foreground="White" Margin="10,4"/>
            <TextBlock Text="Sensor #2: " FontSize="25" Foreground="White" Margin="10,4"/>
            <TextBlock Text="Sensor #3: " FontSize="25" Foreground="White" Margin="10,4"/>
            <TextBlock Text="Sensor #4: " FontSize="25" Foreground="White" Margin="10,4"/>
            <TextBlock Text="Sensor #5: " FontSize="25" Foreground="White" Margin="10,4"/>
        </StackPanel>
    </Grid>
</Window>
